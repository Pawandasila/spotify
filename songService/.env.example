# Song Service Configuration
PORT=8000
NODE_ENV=development

# Database Configuration (PostgreSQL)
# Replace with your actual database URL
DB_URL=postgresql://username:password@localhost:5432/spotify_songs

# For Neon (serverless PostgreSQL) - uncomment and use instead:
# DB_URL=postgresql://username:password@ep-example.neon.tech/spotify_songs?sslmode=require

# Integration with other services
USER_URL=http://localhost:3000
ADMIN_URL=http://localhost:7000
FRONTEND_ORIGIN=http://localhost:3000

# JWT Configuration (if needed for authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=15m
